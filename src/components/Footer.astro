---
import { Icon } from 'astro-icon/components';

const projectLinks = [
  { name: 'How It Works', href: '#how-it-works' },
  { name: 'Team', href: '#team' },
  { name: 'Resources', href: '#resources' },
];

const resourceLinks = [
  { name: 'GitHub Repository', href: 'https://github.com/tanit-project/tanit' },
  { name: 'Project Reports', href: '#reports' },
  { name: 'Documentation', href: '#documentation' },
  { name: 'Presentation', href: '#slides' },
];

const teamLinks = [
  { name: 'Sümeyye Acar', href: '#team' },
  { name: 'Muhammed Furkan Başıbüyük', href: '#team' },
  { name: 'Kutay Buyruk', href: '#team' },
  { name: 'Ömer Bıçakcıoğlu', href: '#team' },
  { name: 'Betül Doğrul', href: '#team' },
];

const socialLinks = [
  { name: 'GitHub', href: 'https://github.com/tanit-project/tanit', icon: 'github' },
  { name: 'LinkedIn', href: 'https://linkedin.com/company/tanit', icon: 'linkedin' },
  { name: 'Instagram', href: 'https://instagram.com/tanit_ai', icon: 'instagram' },
];
---

<footer class="bg-gray-900 text-white pt-16 pb-8 relative overflow-hidden">
  <!-- Subtle background pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0 bg-repeat" style="background-image: url('/grid-pattern.svg');"></div>
  </div>
  
  <!-- Animated gradient background -->
  <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-payflo-purple via-payflo-blue to-payflo-purple bg-[length:200%_auto] animate-gradient-x"></div>
  
  <div class="container-custom relative">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 pb-12 border-b border-gray-800">
      <div class="lg:col-span-1">
        <a href="/" class="inline-flex items-center gap-2 transition-transform duration-300 hover:scale-105" aria-label="TANIT home">
          <div class="h-10 w-10 rounded-lg bg-gradient-to-r from-payflo-purple to-payflo-blue flex items-center justify-center">
            <Icon name="ph:star" class="h-6 w-6 text-white" />
          </div>
          <span class="text-2xl font-bold text-white">TANIT</span>
        </a>
        <p class="mt-4 text-gray-400 max-w-md">
          AI-powered Instagram content creation and management for small businesses. CS 491 Capstone Project.
        </p>
        <div class="mt-6 flex space-x-4">
          {socialLinks.map(social => (
            <a 
              href={social.href} 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-white transition-all duration-300 hover:scale-110 transform"
              aria-label={social.name}
            >
              {social.icon === 'instagram' && (
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
              {social.icon === 'linkedin' && (
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                </svg>
              )}
              {social.icon === 'github' && (
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
      
      <div>
        <h3 class="text-lg font-semibold mb-4 text-white/90 hover:text-white transition-colors duration-300">Project</h3>
        <ul class="space-y-3">
          {projectLinks.map((link, index) => (
            <li class="transform transition-all duration-300 hover:translate-x-1">
              <a 
                href={link.href} 
                class="text-gray-400 hover:text-white transition-colors duration-300 inline-block"
                style={`transition-delay: ${index * 50}ms;`}
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div>
        <h3 class="text-lg font-semibold mb-4 text-white/90 hover:text-white transition-colors duration-300">Resources</h3>
        <ul class="space-y-3">
          {resourceLinks.map((link, index) => (
            <li class="transform transition-all duration-300 hover:translate-x-1">
              <a 
                href={link.href} 
                class="text-gray-400 hover:text-white transition-colors duration-300 inline-block"
                target={link.href.startsWith('http') ? '_blank' : undefined}
                rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                style={`transition-delay: ${index * 50}ms;`}
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div>
        <h3 class="text-lg font-semibold mb-4 text-white/90 hover:text-white transition-colors duration-300">Team</h3>
        <ul class="space-y-3">
          {teamLinks.map((link, index) => (
            <li class="transform transition-all duration-300 hover:translate-x-1">
              <a 
                href={link.href} 
                class="text-gray-400 hover:text-white transition-colors duration-300 inline-block"
                style={`transition-delay: ${index * 50}ms;`}
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <div class="pt-8 text-center text-gray-400 text-sm">
      <p class="hover:text-gray-300 transition-colors duration-300">&copy; {new Date().getFullYear()} TANIT Team. CS 491 Capstone Project. All rights reserved.</p>
    </div>
  </div>
</footer>
