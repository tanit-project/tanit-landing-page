---
import { Icon } from 'astro-icon/components';
---

<section class="pt-20 pb-16 md:pt-28 md:pb-24 overflow-hidden relative">
  <!-- Subtle background pattern with parallax effect -->
  <div class="absolute inset-0 opacity-5 parallax" data-speed="0.2">
    <div class="absolute inset-0 bg-repeat" style="background-image: url('/grid-pattern.svg');"></div>
  </div>
  
  <div class="container-custom relative">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <div class="animate-on-scroll delay-0 inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-payflo-purple/10 to-payflo-blue/10 rounded-full mb-6">
          <Icon name="ph:star" class="h-5 w-5 text-payflo-purple" />
          <span class="text-sm font-medium text-payflo-purple">CS 491 Capstone Project</span>
        </div>
        
        <h1 class="animate-on-scroll delay-0 text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
          <span class="gradient-text">TANIT</span> â€“ AI that creates your Instagram magic
        </h1>
        <p class="animate-on-scroll delay-1 mt-6 text-xl text-gray-600 max-w-lg">
          Your AI-powered social media partner for creating stunning Instagram posts and reels. From photos to posts, in seconds.
        </p>
        <div class="animate-on-scroll delay-2 mt-8 flex flex-col sm:flex-row gap-4">
          <a href="#how-it-works" class="btn btn-primary">Learn How It Works</a>
          <a href="#team" class="btn btn-secondary">Meet the Team</a>
        </div>
        <div class="animate-on-scroll delay-3 mt-8">
          <p class="text-sm font-semibold text-gray-900 mb-3">Perfect for:</p>
          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1 bg-payflo-purple/10 text-payflo-purple rounded-full text-sm">Small Businesses</span>
            <span class="px-3 py-1 bg-payflo-blue/10 text-payflo-blue rounded-full text-sm">Boutiques</span>
            <span class="px-3 py-1 bg-payflo-purple/10 text-payflo-purple rounded-full text-sm">Clothing Stores</span>
          </div>
        </div>
      </div>
      
      <div class="animate-on-scroll delay-4">
        <div class="relative">
          <div class="absolute -inset-0.5 bg-gradient-to-r from-payflo-purple to-payflo-blue rounded-xl blur opacity-30 transition-opacity duration-300 hover:opacity-50"></div>
          <div class="relative bg-gradient-to-br from-payflo-purple to-payflo-blue rounded-xl shadow-xl overflow-hidden p-8">
            <div class="space-y-6">
              <div class="flex items-center gap-4 bg-white/10 backdrop-blur-sm rounded-lg p-4 transform hover:scale-105 transition-all duration-300">
                <div class="h-12 w-12 rounded-full bg-white/20 flex items-center justify-center">
                  <Icon name="ph:images" class="h-6 w-6 text-white" />
                </div>
                <div class="text-white">
                  <div class="font-semibold">AI-Powered Content</div>
                  <div class="text-sm text-white/80">Upload photos & create instantly</div>
                </div>
              </div>
              
              <div class="flex items-center gap-4 bg-white/10 backdrop-blur-sm rounded-lg p-4 transform hover:scale-105 transition-all duration-300">
                <div class="h-12 w-12 rounded-full bg-white/20 flex items-center justify-center">
                  <Icon name="ph:calendar" class="h-6 w-6 text-white" />
                </div>
                <div class="text-white">
                  <div class="font-semibold">Smart Scheduling</div>
                  <div class="text-sm text-white/80">Auto-post at the best times</div>
                </div>
              </div>
              
              <div class="flex items-center gap-4 bg-white/10 backdrop-blur-sm rounded-lg p-4 transform hover:scale-105 transition-all duration-300">
                <div class="h-12 w-12 rounded-full bg-white/20 flex items-center justify-center">
                  <Icon name="ph:gift" class="h-6 w-6 text-white" />
                </div>
                <div class="text-white">
                  <div class="font-semibold">Special Day Posts</div>
                  <div class="text-sm text-white/80">Automated holiday content</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
