---
import { Icon } from 'astro-icon/components';

const steps = [
  {
    number: "01",
    title: "General Campaign Management",
    description: "Users enter a short prompt and upload photos via website or WhatsApp bot. The system uses AI to instantly generate Instagram posts, reels, or stories with automatic design, captioning, and hashtags.",
    icon: "ph:image",
  },
  {
    number: "02",
    title: "Scheduling Activities",
    description: "Smart social scheduler lets stores plan and schedule their Instagram content in advance. Posts go live automatically at the best engagement times with no manual upload needed.",
    icon: "ph:calendar-check",
  },
  {
    number: "03",
    title: "Automatic Recommendations",
    description: "The system recognizes national holidays and special events, automatically generating relevant post, story, and reel ideas complete with visuals, captions, and hashtags that fit the occasion.",
    icon: "ph:lightbulb",
  },
];
---

<section class="py-20 bg-payflo-gray relative overflow-hidden">
  <!-- Subtle background pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0 bg-repeat" style="background-image: url('/grid-pattern.svg');"></div>
  </div>
  
  <div class="container-custom relative">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="animate-on-scroll delay-0 text-3xl md:text-4xl font-bold">How TANIT Works</h2>
      <p class="animate-on-scroll delay-1 mt-4 text-xl text-gray-600">
        Three powerful ways TANIT helps manage your Instagram campaigns effortlessly.
      </p>
    </div>
    
    <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8 relative">
      <!-- Connecting line between steps (visible on desktop) -->
      <div class="hidden md:block absolute top-16 left-1/6 right-1/6 h-0.5 bg-gradient-to-r from-payflo-purple to-payflo-blue"></div>
      
      {steps.map((step, index) => (
        <div 
          class={`bg-white rounded-xl p-8 shadow-lg border border-gray-100 animate-on-scroll delay-${index + 2} group hover:shadow-xl transition-all duration-300 hover:-translate-y-2`}
        >
          <div class="flex items-center justify-center w-16 h-16 rounded-full bg-payflo-purple/10 text-payflo-purple font-semibold text-lg transition-all duration-300 group-hover:bg-payflo-purple group-hover:text-white group-hover:scale-110 mb-4">
            {step.number}
          </div>
          <div class="h-12 w-12 rounded-lg bg-gradient-to-r from-payflo-purple to-payflo-blue flex items-center justify-center text-white mb-4 transition-transform duration-300 group-hover:scale-110">
            <Icon name={step.icon} class="h-6 w-6 transition-transform duration-300 group-hover:rotate-12" />
          </div>
          <h3 class="mt-2 text-xl font-semibold transition-colors duration-300 group-hover:text-payflo-purple">{step.title}</h3>
          <p class="mt-3 text-gray-600">{step.description}</p>
          
          <!-- Arrow indicator for next step (visible on mobile) -->
          {index < steps.length - 1 && (
            <div class="flex justify-center mt-4 md:hidden">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-payflo-purple animate-bounce" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
              </svg>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
