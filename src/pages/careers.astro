---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import teamPhoto from '../assets/team-photo.jpg';
---

<Layout title="Careers | Payflo">
	<main>
		<!-- Hero Section -->
		<section class="pt-20 pb-16 md:pt-28 md:pb-24 overflow-hidden">
			<div class="container-custom">
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
					<div>
						<h1 class="animate-on-scroll delay-0 text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
							Join Our <span class="gradient-text">Team</span>
						</h1>
						<p class="animate-on-scroll delay-1 mt-6 text-xl text-gray-600 max-w-lg">
							Help us revolutionize the future of payroll technology. We're looking for passionate individuals who want to make a difference.
						</p>
						<div class="animate-on-scroll delay-2 mt-8">
							<a href="#open-positions" class="btn btn-primary">View Open Positions</a>
						</div>
					</div>
					<div class="animate-on-scroll delay-3">
						<div class="relative">
							<div class="absolute -inset-0.5 bg-gradient-to-r from-payflo-purple to-payflo-blue rounded-xl blur opacity-30"></div>
							<div class="relative bg-white rounded-xl shadow-xl overflow-hidden">
								<Image 
									src={teamPhoto} 
									alt="Our Team" 
									class="w-full h-auto"
									width={700}
									height={500}
								/>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Why Join Us Section -->
		<section class="section bg-gray-50">
			<div class="container-custom">
				<h2 class="animate-on-scroll delay-0 text-3xl md:text-4xl font-bold text-center mb-16">
					Why Join <span class="gradient-text">Payflo</span>?
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div class="animate-on-scroll delay-1 feature-card">
						<div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-5">
							<svg class="w-6 h-6 text-payflo-purple" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M13 10V3L4 14H11V21L20 10H13Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</div>
						<h3 class="text-2xl font-semibold mb-4">Innovation First</h3>
						<p class="text-gray-600 text-lg">Work on cutting-edge technology that's transforming how businesses handle payroll.</p>
					</div>

					<div class="animate-on-scroll delay-2 feature-card">
						<div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-5">
							<svg class="w-6 h-6 text-payflo-blue" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M17 21V19C17 17.9391 16.5786 16.9217 15.8284 16.1716C15.0783 15.4214 14.0609 15 13 15H5C3.93913 15 2.92172 15.4214 2.17157 16.1716C1.42143 16.9217 1 17.9391 1 19V21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M9 11C11.2091 11 13 9.20914 13 7C13 4.79086 11.2091 3 9 3C6.79086 3 5 4.79086 5 7C5 9.20914 6.79086 11 9 11Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M23 21V19C22.9993 18.1137 22.7044 17.2528 22.1614 16.5523C21.6184 15.8519 20.8581 15.3516 20 15.13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M16 3.13C16.8604 3.35031 17.623 3.85071 18.1676 4.55232C18.7122 5.25392 19.0078 6.11683 19.0078 7.005C19.0078 7.89318 18.7122 8.75608 18.1676 9.45769C17.623 10.1593 16.8604 10.6597 16 10.88" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</div>
						<h3 class="text-2xl font-semibold mb-4">Great Culture</h3>
						<p class="text-gray-600 text-lg">Join a diverse, inclusive team that values collaboration, growth, and work-life balance.</p>
					</div>

					<div class="animate-on-scroll delay-3 feature-card">
						<div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-5">
							<svg class="w-6 h-6 text-payflo-purple" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M12 20V10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M18 20V4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M6 20V16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</div>
						<h3 class="text-2xl font-semibold mb-4">Growth Opportunities</h3>
						<p class="text-gray-600 text-lg">Develop your skills and advance your career with continuous learning and mentorship.</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Benefits Section -->
		<section class="section">
			<div class="container-custom">
				<h2 class="animate-on-scroll delay-0 text-3xl md:text-4xl font-bold text-center mb-16">
					Our <span class="gradient-text">Benefits</span>
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
					<div class="animate-on-scroll delay-1 feature-card">
						<div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-5">
							<svg class="w-6 h-6 text-payflo-purple" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M12 1V23" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M17 5H9.5C8.57174 5 7.6815 5.36875 7.02513 6.02513C6.36875 6.6815 6 7.57174 6 8.5C6 9.42826 6.36875 10.3185 7.02513 10.9749C7.6815 11.6313 8.57174 12 9.5 12H14.5C15.4283 12 16.3185 12.3687 16.9749 13.0251C17.6313 13.6815 18 14.5717 18 15.5C18 16.4283 17.6313 17.3185 16.9749 17.9749C16.3185 18.6313 15.4283 19 14.5 19H6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</div>
						<h3 class="text-xl font-semibold mb-3">Competitive Salary</h3>
						<p class="text-gray-600">Industry-leading compensation packages</p>
					</div>

					<div class="animate-on-scroll delay-2 feature-card">
						<div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-5">
							<svg class="w-6 h-6 text-payflo-blue" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M22 11.08V12C21.9988 14.1564 21.3005 16.2547 20.0093 17.9818C18.7182 19.709 16.9033 20.9725 14.8354 21.5839C12.7674 22.1953 10.5573 22.1219 8.53447 21.3746C6.51168 20.6273 4.78465 19.2461 3.61096 17.4371C2.43727 15.628 1.87979 13.4881 2.02168 11.3363C2.16356 9.18455 2.99721 7.13631 4.39828 5.49706C5.79935 3.85781 7.69279 2.71537 9.79619 2.24013C11.8996 1.7649 14.1003 1.98232 16.07 2.85999" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M22 4L12 14.01L9 11.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</div>
						<h3 class="text-xl font-semibold mb-3">Health Benefits</h3>
						<p class="text-gray-600">Comprehensive medical, dental, and vision</p>
					</div>

					<div class="animate-on-scroll delay-3 feature-card">
						<div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-5">
							<svg class="w-6 h-6 text-payflo-purple" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M19 4H5C3.89543 4 3 4.89543 3 6V20C3 21.1046 3.89543 22 5 22H19C20.1046 22 21 21.1046 21 20V6C21 4.89543 20.1046 4 19 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M16 2V6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M8 2V6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M3 10H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</div>
						<h3 class="text-xl font-semibold mb-3">Flexible PTO</h3>
						<p class="text-gray-600">Take time off when you need it</p>
					</div>

					<div class="animate-on-scroll delay-4 feature-card">
						<div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-5">
							<svg class="w-6 h-6 text-payflo-blue" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M2 3H8C9.06087 3 10.0783 3.42143 10.8284 4.17157C11.5786 4.92172 12 5.93913 12 7V21C12 20.2044 11.6839 19.4413 11.1213 18.8787C10.5587 18.3161 9.79565 18 9 18H2V3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M22 3H16C14.9391 3 13.9217 3.42143 13.1716 4.17157C12.4214 4.92172 12 5.93913 12 7V21C12 20.2044 12.3161 19.4413 12.8787 18.8787C13.4413 18.3161 14.2044 18 15 18H22V3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</div>
						<h3 class="text-xl font-semibold mb-3">Learning Budget</h3>
						<p class="text-gray-600">Annual allowance for courses and conferences</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Open Positions Section -->
		<section id="open-positions" class="section bg-gray-50">
			<div class="container-custom">
				<h2 class="animate-on-scroll delay-0 text-3xl md:text-4xl font-bold text-center mb-16">
					Open <span class="gradient-text">Positions</span>
				</h2>
				<div class="space-y-6">
					<div class="animate-on-scroll delay-1 feature-card">
						<div class="flex flex-col md:flex-row md:items-center md:justify-between">
							<div>
								<h3 class="text-2xl font-semibold mb-3">Senior Software Engineer</h3>
								<p class="text-gray-600 text-lg mb-4">Help build and scale our core payroll infrastructure.</p>
								<div class="flex items-center gap-4">
									<span class="bg-purple-100 text-payflo-purple px-4 py-1.5 rounded-full text-sm font-medium">Full-time</span>
									<span class="bg-blue-100 text-payflo-blue px-4 py-1.5 rounded-full text-sm font-medium">Remote</span>
								</div>
							</div>
							<a href="/careers/senior-software-engineer" class="mt-6 md:mt-0 btn btn-primary">
								Learn more →
							</a>
						</div>
					</div>

					<div class="animate-on-scroll delay-2 feature-card">
						<div class="flex flex-col md:flex-row md:items-center md:justify-between">
							<div>
								<h3 class="text-2xl font-semibold mb-3">Product Designer</h3>
								<p class="text-gray-600 text-lg mb-4">Create beautiful, intuitive experiences for our customers.</p>
								<div class="flex items-center gap-4">
									<span class="bg-purple-100 text-payflo-purple px-4 py-1.5 rounded-full text-sm font-medium">Full-time</span>
									<span class="bg-blue-100 text-payflo-blue px-4 py-1.5 rounded-full text-sm font-medium">Remote</span>
								</div>
							</div>
							<a href="/careers/product-designer" class="mt-6 md:mt-0 btn btn-primary">
								Learn more →
							</a>
						</div>
					</div>

					<div class="animate-on-scroll delay-3 feature-card">
						<div class="flex flex-col md:flex-row md:items-center md:justify-between">
							<div>
								<h3 class="text-2xl font-semibold mb-3">Customer Success Manager</h3>
								<p class="text-gray-600 text-lg mb-4">Help our customers succeed with our payroll solutions.</p>
								<div class="flex items-center gap-4">
									<span class="bg-purple-100 text-payflo-purple px-4 py-1.5 rounded-full text-sm font-medium">Full-time</span>
									<span class="bg-blue-100 text-payflo-blue px-4 py-1.5 rounded-full text-sm font-medium">Remote</span>
								</div>
							</div>
							<a href="/careers/customer-success-manager" class="mt-6 md:mt-0 btn btn-primary">
								Learn more →
							</a>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="section bg-gradient-to-r from-payflo-purple to-payflo-blue">
			<div class="container-custom text-center">
				<h2 class="animate-on-scroll delay-0 text-3xl md:text-4xl font-bold text-white mb-8">Don't see the right position?</h2>
				<p class="animate-on-scroll delay-1 text-xl text-white/90 mb-10 max-w-2xl mx-auto">
					We're always looking for talented individuals to join our team. Send us your resume and we'll keep you in mind for future opportunities.
				</p>
				<a 
					href="mailto:careers@payflo.dev" 
					class="animate-on-scroll delay-2 btn bg-white text-payflo-purple hover:bg-white/90"
				>
					Contact Us
				</a>
			</div>
		</section>
	</main>
</Layout>
